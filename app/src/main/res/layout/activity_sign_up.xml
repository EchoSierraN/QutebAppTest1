<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.SignUpActivity">

    <EditText
        android:id="@+id/et_signup_your_first_name"
        android:layout_width="328dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/signup_data_entry_background"
        android:ems="10"
        android:hint="@string/signup_your_first_name"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_signup_create_account" />

    <EditText
        android:id="@+id/et_signup_phone_email"
        android:layout_width="328dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/signup_data_entry_background"
        android:ems="10"
        android:hint="@string/signup_phone_number_email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_your_first_name" />

    <EditText
        android:id="@+id/et_signup_password"
        android:layout_width="328dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/signup_data_entry_background"
        android:ems="10"
        android:hint="@string/signup_password"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_phone_email" />

    <EditText
        android:id="@+id/et_signup_confirm_password"
        android:layout_width="328dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/signup_data_entry_background"
        android:ems="10"
        android:hint="@string/signup_confirm_password"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_password" />

    <TextView
        android:id="@+id/tv_signup_create_account"
        android:layout_width="364dp"
        android:layout_height="61dp"
        android:layout_marginTop="84dp"
        android:text="@string/signup_create_an_account"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="41dp" />

    <CheckBox
        android:id="@+id/cb_signup_i_agree_to_terms"
        android:layout_width="285dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:text="@string/signup_i_agree_to_terms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_signup_confirm_password" />

    <Button
        android:id="@+id/btn_signup_signup"
        android:layout_width="161dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/drawable_button_oval"
        android:text="@string/signup_signup"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_signup_i_agree_to_terms" />


</androidx.constraintlayout.widget.ConstraintLayout>